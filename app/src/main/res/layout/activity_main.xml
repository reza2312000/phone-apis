<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_main"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/bg_main1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Phone API"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
        <Button
            android:id="@+id/btnGetMain"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:elevation="10dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/bg1"
            android:text="Ambil Data Phone"/>
        <Button
            android:id="@+id/btnCreateMain"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/bg3"
            android:text="Create Data Phone"/>
        <Button
            android:id="@+id/btnUpdateMain"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:elevation="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/bg"
            android:text="Update Data Phone"/>
        <Button
            android:id="@+id/btnDeleteMain"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:elevation="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/bg3"
            android:text="Delete Data Phone"/>



    </LinearLayout>

</LinearLayout>